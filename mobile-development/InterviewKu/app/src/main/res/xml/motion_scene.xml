<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/first">
        <Constraint android:id="@id/left">
            <Transform android:translationX="0dp" />
        </Constraint>

        <Constraint android:id="@id/center">
            <Transform
                android:rotationY="-25"
                android:translationX="200dp" />
        </Constraint>

        <Constraint android:id="@id/right">
            <Transform
                android:rotationY="-25"
                android:translationX="500dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/second">
        <Constraint android:id="@id/left">
            <Transform
                android:rotationY="25"
                android:translationX="-200dp" />
        </Constraint>

        <Constraint android:id="@id/center">
            <Transform
                android:rotationY="0"
                android:translationX="0dp" />
        </Constraint>

        <Constraint android:id="@id/right">
            <Transform
                android:rotationY="-15"
                android:translationX="200dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/third">
        <Constraint android:id="@id/left">
            <Transform
                android:rotationY="25"
                android:translationX="-500dp" />
        </Constraint>

        <Constraint android:id="@id/center">
            <Transform
                android:rotationY="25"
                android:translationX="-200dp" />
        </Constraint>

        <Constraint android:id="@id/right">
            <Transform
                android:rotationY="0"
                android:translationX="0dp" />
        </Constraint>
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@id/second"
        motion:constraintSetStart="@id/first" />

    <Transition
        motion:constraintSetEnd="@id/third"
        motion:constraintSetStart="@id/second" />
    <Transition
        motion:constraintSetEnd="@+id/first"
        motion:constraintSetStart="@+id/third" />

</MotionScene>